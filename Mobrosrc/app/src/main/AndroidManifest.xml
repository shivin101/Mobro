<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobile.mobro01" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mobro"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".Packages"
            android:label="@string/title_activity_packages" >
        </activity>
        <activity
            android:name=".Invite"
            android:label="@string/title_activity_invite" >
        </activity>
        <activity
            android:name=".Payment"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_payment" >
        </activity>
        <activity
            android:name=".Forgot"
            android:label="@string/title_activity_forgot"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".PackageMain" >
        </activity>
        <activity android:name=".PaymentPortal" >
        </activity>
        <activity android:name=".Wallet" >
        </activity>
    </application>

</manifest>
